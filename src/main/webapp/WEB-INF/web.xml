<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <display-name>allergy-advisor-server</display-name>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            classpath*:/com/mts_health/server-config.xml
        </param-value>
    </context-param>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <listener>
        <listener-class>com.mts_health.context_information.CountryHeaderListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>MvcRequestFilter</filter-name>
        <filter-class>com.mts_health.utils.MvcRequestFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MvcRequestFilter</filter-name>
        <url-pattern>/status</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>MvcRequestFilter</filter-name>
        <url-pattern>/allergen_advice</url-pattern>
    </filter-mapping>

</web-app>
